<form action="/tasks/<%=@task.id%>" method="post">
  <input name="_method" type="hidden" value="patch"/>
  <%= hidden_field_tag :authenticity_token, form_authenticity_token -%>
  <span class="ml-3">Title</span>
  <div style="max-width: 250px" class="ml-3 mt-2">
    <input class="form-control" type="text" name="task[title]" value="<%= @task.title%>"><br>
    <span>Description</span>
    <textarea class="form-control mt-2" id="exampleFormControlTextarea1" rows="2" name="task[details]"><%= @task.details %></textarea>
    <input type="checkbox" name="task[completed]">Completed <br>
    <input type="submit" class="btn btn-success mt-3">
  </div>
</form>
